ShowcaseScreen:
    name: 'Login'
    focused: ti_default
    on_parent:
        if not args[1] and self.focused: self.focused.focus = False
        if args[1]: ti_default.focus = True
    
    GridLayout:

        cols: 3
        spacing: '2dp'
        size_hint_y: None
        height: self.minimum_height
        
        Label:
            text: 'Usuario'
           
        CTextInput:
            id: ti_default
            size_hint_y: None
            height: '48dp'
            text: 'Usuario'
            focus: True
    GridLayout:

        cols: 3
        spacing: '2dp'
        size_hint_y: None
        height: self.minimum_height
            
        Label:
            text: 'Contrasena'

        CTextInput:
            size_hint_y: None
            height: '48dp'
            text: 'Password'
            password: True
    
    GridLayout:

        cols: 3
        spacing: '15dp'
        size_hint_y: None
        padding: "100sp"
        
        
        Button:
            size_hint_y: None
            height: '48dp'
            width: '300dp'
            text: 'Ingresar'

        Button:
            size_hint_y: None
            height: '48dp'
            width: '100dp'
            text: 'Cancelar'
            state: 'down'

   

<CTextInput@TextInput>
    on_focus:
        screen = self.parent.parent.parent.parent
        if screen.parent: screen.focused = self
    
