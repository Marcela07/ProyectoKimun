ShowcaseScreen:
    name: 'Pictures'

    FloatLayout:
    
    widget:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: 'background.png'
                size: self.size
    
    
            Scatter:
                id: scatter
                size_hint: None, None
                size: image.size

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        Image:
            size_hint: None, None
            size: 24, 24
            source: 'sillas.jpg'
            
            
            Image:
                id: image
                source: root.source
                

